{{#if vehiculos}}

<div class="row row-cols-2 row-cols-md-4 g-4 mt-5">
    {{#each vehiculos}}

    <div class="col">
        <div class="card mb-2 text-bg-dark">
            <div class="row no-gutters">
                <div style="height: 200px;">
                    <img class="card-img" src="/img/{{this.imagen}}" alt="Suresh Dasari Card" style="object-fit:cover; height:200px">
                </div>
                <div>
                    <div class="card-body">
                        <h5 class="card-title">Marca : {{this.marca}}</h5>
                        <p class="card-text">Modelo : {{this.modelo}}</p>
                        <p class="card-text">AÃ±o : {{fecha this.year}}</p>
                        <button onclick="eliminar('{{this.id}}')" class="btn btn-outline-danger">Eliminar</button>
                        <a id="actualizar" onclick="actualizar('{{this.id}}')"
                            class="btn btn-outline-success">actualizar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}

</div>
{{else}}
<div class="mt-5">
    <p class="text-center">por el momento no tenemos vehiculos registrados</p>
</div>
{{/if}}
