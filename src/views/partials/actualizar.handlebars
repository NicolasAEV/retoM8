{{#each vehiculos}}
<form id="actualizar">
   <div class="mt-2">
        <div class="form-floating mb-3">
            <input type="number" class="form-control" name="id" id="id" placeholder="Ford" value="{{this.id}}" disabled>
            <label for="floatingInput" >id</label>
        </div>
    </div>
    <div class="mt-2">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="marca" id="marca" placeholder="Ford" value="{{this.marca}}" required>
            <label for="floatingInput">Marca</label>
        </div>
    </div>
    <div class="mt-2">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="modelo" id="modelo" placeholder="Ford" value="{{this.modelo}}" required>
            <label for="floatingInput">Modelo</label>
        </div>
    </div>
    <div class="mt-2">
        <div class="form-floating mb-3">
            <input type="date" class="form-control" name="year" id="year" placeholder="{{calendar this.year}}" value="{{calendar this.year}}" required>
            <label for="floatingInput">a√±o</label>
        </div>
    </div>
    <div class="mt-2">
 <div class="mb-2">
            <label for="formFileLg" class="form-label">imagen actual :</label>
            <input type="hidden"  id="nameImagen" name="nameImagen" value="{{this.imagen}}">
            <img src="/img/{{this.imagen}}" alt="" style="height:200px" >
        </div>
    </div>
    <div class="mt-2">
        <div class="mb-2">
            <label for="formFileLg" class="form-label">Inserte imagen del vehiculo </label>
            <input class="form-control form-control-lg" name="imagen" id="imagen" type="file" value="{{this.imagen}}">
        </div>
    </div>
       <div class="mt-2">
        <div class="mb-2">
           <button class="btn btn-success">Actualizar</button>
        </div>
    </div>

</form>
{{/each}}

<script src="/js/update.js"></script>